{
  "name": "dme-backend",
  "version": "1.0.0",
  "description": "Backend for Daily Mind Education Quiz Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:notification": "node test-notification.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "performance": "node -e \"console.log('Memory Usage:', process.memoryUsage()); console.log('CPU Usage:', process.cpuUsage())\"",
    "seed:testdata": "python3 ../security/10-data-seeding/seed_complete_testdata.py",
    "test:e2e:complete": "node security/10-data-seeding/e2e_complete_tests.js",
    "test:admin:complete": "node security/10-data-seeding/admin_dashboard_tests.js",
    "test:complete": "npm run seed:testdata && npm run test:e2e:complete && npm run test:admin:complete",
    "test:security:all": "node security/run-tests.js"
  },
  "dependencies": {
    "@sentry/node": "^8.55.0",
    "@upstash/redis": "^1.36.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.2",
    "cloudinary": "^2.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "jws": "^4.0.1",
    "mongoose": "^7.5.3",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.12",
    "pino": "^8.20.0",
    "pino-http": "^8.5.0",
    "qs": "^6.14.1",
    "razorpay": "^2.9.6",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "validator": "^13.15.26",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  }
}
